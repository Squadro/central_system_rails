<style type="text/css">
.btn-file {
    position: relative;
    overflow: hidden;
}
.btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 999px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
}

input[readonly] {
	background-color: white !important;
	cursor: text !important;
}
</style>

	<div class="form-group">
	  <label class="control-label" for="colorCode">Color Code</label>
	  <div class="controls">
	    <input required="true" class="form-control" name="color[code]" type="text" id="colorCode" placeholder="Color Code" value="<%= @color.code unless @color.nil? %>"/>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorMeta">Meta Information</label>
	  <div class="controls">
	    <input required="true" class="form-control" name="color[meta]" type="text" id="colorMeta" placeholder="Color Meta" value="<%= @color.meta unless @color.nil? %>"/>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorImageUrl">Color Image URL</label>
	  <div class="controls">
	    <input type="text" class="form-control" name="color[image_url]" id="colorImageUrl" placeHolder="https://yourwebsite.com/image.ext" value="<%= @color.image_url unless @color.nil?%>"/>
		<%= button_to_function "Upload", "upload_file()", class: "ok" %>
	  </div>
	</div>
	
	<script type="text/javascript" charset="utf-8">
	  function upload_file()
	  {
		 $('#fileUploaderContainer').modal('show');
	  	 $("#uploadForm").find("input[type=file]").attr("name","uploaded_file"); 
	  }
  
	  var upload_callback = function(upload_url){
		  $('#appBGImage').val(upload_url)
		  $("#fileUploaderContainer").modal("hide")
	  }
	</script>


	


