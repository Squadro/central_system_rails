<style type="text/css">
.btn-file {
    position: relative;
    overflow: hidden;
}
.btn-file input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 999px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
}

input[readonly] {
	background-color: white !important;
	cursor: text !important;
}
</style>

	<div class="form-group">
	  <label class="control-label" for="colorCode">Laminate color code</label>
	  <div class="controls">
	    <input required="true" class="form-control" name="color[code]" type="text" id="colorCode" placeholder="SL001" value="<%= @color.code unless @color.nil? %>"/>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorLaminateBrand">Laminate brand</label>
	  <div class="controls">
	    <input required="true" class="form-control" name="color[laminate_brand]" type="text" id="colorLaminateBrand" placeholder="Merino" value="<%= @color.laminate_brand unless @color.nil? %>"/>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorLaminateCatalogue">Laminate catalogue type</label>
	  <div class="controls">
	    <input required="true" class="form-control" name="color[catalogue_type]" type="text" id="colorLaminateCatalogue" placeholder="Big" value="<%= @color.catalogue_type unless @color.nil? %>"/>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorCataloguePageNo">Catalogue page no</label>
	  <div class="controls">
	    <input required="true" class="form-control" name="color[catalogue_page_no]" type="text" id="colorCataloguePageNo" placeholder="25" value="<%= @color.catalogue_page_no unless @color.nil? %>"/>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorVendorProductCode">Vendor Product Code</label>
	  <div class="controls">
	    <input required="true" class="form-control" name="color[vendor_product_code]" type="text" id="colorVendorProductCode" placeholder="12ADBDC" value="<%= @color.vendor_product_code unless @color.nil? %>"/>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorGrainType">Laminate Grain Type</label>
	  <div class="controls">
	    <%= select("color", "grain_type", Color::GRAIN_TYPES) %>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorFinishType">Laminate Finish Type</label>
	  <div class="controls">
	    <%= select("color", "finish_type", Color::FINISH_TYPES) %>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorImageUrl">Color image URL</label>
	  <div class="controls">
	    <input type="text" class="form-control" name="color[image_url]" id="colorImageUrl" placeHolder="https://yourwebsite.com/image.ext" value="<%= @color.image_url unless @color.nil?%>"/>
		<%= link_to "Upload", '#', class: "upload_link" %>
	  </div>
	</div>
	
	<div class="form-group">
	  <label class="control-label" for="colorMeta">More information</label>
	  <div class="controls">
	    <input required="true" class="form-control" name="color[meta]" type="text" id="colorMeta" placeholder="Not sure why you would need this?" value="<%= @color.meta unless @color.nil? %>"/>
	  </div>
	</div>
	
	<script type="text/javascript" charset="utf-8">
		$(function() {
	  	  $('.upload_link').click(function() {
			 upload_file();
	    	 return false;
	  		});
		});
	
	  function upload_file()
	  {
		 $('#fileUploaderContainer').modal('show');
	  	 $("#uploadForm").find("input[type=file]").attr("name","uploaded_file");
	  }
  
	  var upload_callback = function(upload_url){
		  $('#colorImageUrl').val(upload_url);
		  $("#fileUploaderContainer").modal("hide");
	  }
	</script>


	


